        </TextBox>
        <Label x:Name="label2_Copy4" Content="Email: " HorizontalAlignment="Left" Margin="409,311,0,0" VerticalAlignment="Top" FontSize="24" HorizontalContentAlignment="Right" Height="42" Width="78"/>
        <TextBox x:Name="txt_Email" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" Height="35" Margin="522,315,60,0" VerticalAlignment="Top" Width="310" FontFamily="Verdana" PreviewTextInput="txt_KDNR_PreviewTextInput" BorderBrush="#FF0342FF" BorderThickness="2" VerticalContentAlignment="Center">
