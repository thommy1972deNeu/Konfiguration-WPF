    <Grid Margin="0,0,-29,0">
        <Image x:Name="image" HorizontalAlignment="Left" Height="306" Margin="2,90,0,0" VerticalAlignment="Top" Width="314" Source="/Bilder/white-male-1834121_640.jpg"/>
