                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF5661CF" BlurRadius="20" Direction="0" RenderingBias="Quality" ShadowDepth="2"/>
